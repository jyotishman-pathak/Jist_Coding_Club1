generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Department {
  PEIE
  ETC
  MECH
  CIVIL
  MATHS
  PHYSICS
  CHEMISTRY
  IT
}

model Student {
  id                 Int        @id @default(autoincrement())
  name               String
  email              String     @unique
  password           String
  Department         Department
  ProgrammingExperience Int
  Interest           String[]
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
}